sidebar.sidebar
	- if current_user
		.user
			.profile
				.photo = image_tag("https://cdn.jpegmini.com/user/images/slider_puffin_before_mobile.jpg", size: "80x80")
				.profile-details
					.name = current_user.full_name
					.username = current_user.username
			.follow-details
				.following.follow-block
					.count_number 180
					.count_caption Followers
				.followers.follow-block
					.count_number 340
					.count_caption Following

	.links
		ul.navigation-links
			li = link_to 'Home', '/'
			li = link_to 'Connect', '/'
			li = link_to 'Discover', '/'
			li = link_to 'Profile', '/'
			li = link_to 'Stats', '/'
			- if current_user.present?
				li = link_to "My Tweets", [current_user, :tweets]
				li = link_to "Sign Out", destroy_user_session_path, method: :delete
			- else
				li = link_to "Sign In", new_user_session_path
				li = link_to "Sign up", new_user_registration_path

